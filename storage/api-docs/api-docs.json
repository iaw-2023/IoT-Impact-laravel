{
    "openapi": "3.0.0",
    "info": {
        "title": "BurgerPlanet",
        "version": "1.0"
    },
    "paths": {
        "rest/items": {
            "get": {
                "tags": [
                    "Items"
                ],
                "summary": "Obtener todos los items",
                "operationId": "3b53245b7df3a26823bc85185ba59d90",
                "responses": {
                    "200": {
                        "description": "Lista de items"
                    }
                }
            }
        },
        "rest/items/{id}": {
            "get": {
                "tags": [
                    "Items"
                ],
                "summary": "Obtener un item por ID",
                "operationId": "e333c3cdfaea71c7b12ed58c85237069",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del item",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Item encontrado"
                    },
                    "404": {
                        "description": "Item no encontrado"
                    }
                }
            }
        },
        "/orders": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Obtener todas las órdenes",
                "operationId": "325fd3d55bbe9bb39645269928fa4983",
                "responses": {
                    "200": {
                        "description": "Lista de órdenes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Order"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Crear una nueva orden",
                "operationId": "2f18088ceb7284b59ea6ca0977d07fc5",
                "requestBody": {
                    "description": "Datos de la orden",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Order"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Orden creada exitosamente"
                    }
                }
            }
        },
        "/orders/{id}": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Obtener una orden por ID",
                "operationId": "f088d34a2737782215f435f854e31de5",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la orden",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Orden encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Order"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Orden no encontrada"
                    }
                }
            }
        },
        "/categories": {
            "get": {
                "tags": [
                    "Product Categories"
                ],
                "summary": "Obtener todas las categorías de productos",
                "operationId": "8ab90094a757b7ffb8e1c414334ea0e3",
                "responses": {
                    "200": {
                        "description": "Lista de categorías de productos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ProductCategory"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/{id}": {
            "get": {
                "tags": [
                    "Product Categories"
                ],
                "summary": "Obtener una categoría de producto por ID",
                "operationId": "46e3fdc7494a4145dc2f8281f7129431",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la categoría de producto",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Categoría de producto encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductCategory"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Categoría de producto no encontrada"
                    }
                }
            }
        },
        "/rest/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Obtener todos los productos",
                "operationId": "4a015e0a6aa705316d79ab26148eaacf",
                "responses": {
                    "200": {
                        "description": "Lista de productos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/rest/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Obtener un producto por ID",
                "operationId": "97749e88af1af59bff63bbe996ee61e5",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del producto",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Producto encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Producto no encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Item": {
                "required": [
                    "quantity",
                    "individual_price",
                    "order_id",
                    "product_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "individual_price": {
                        "type": "number",
                        "format": "float"
                    },
                    "order_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "product_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "order": {
                        "$ref": "#/components/schemas/Order"
                    },
                    "product": {
                        "$ref": "#/components/schemas/Product"
                    }
                },
                "type": "object"
            },
            "Order": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "customer_email": {
                        "type": "string",
                        "example": "example@example.com"
                    },
                    "total_amount": {
                        "type": "number",
                        "format": "float",
                        "example": 123.45
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-05-14 13:42:21"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-05-14 13:42:21"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Item"
                        }
                    }
                },
                "type": "object"
            },
            "Product": {
                "required": [
                    "id",
                    "name",
                    "price",
                    "stock",
                    "description",
                    "product_category_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Laptop"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 999.99
                    },
                    "stock": {
                        "type": "integer",
                        "example": 10
                    },
                    "description": {
                        "type": "string",
                        "example": "A high-end laptop for power users"
                    },
                    "product_category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category": {
                        "$ref": "#/components/schemas/ProductCategory"
                    }
                },
                "type": "object"
            },
            "ProductCategory": {
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Electronics"
                    }
                },
                "type": "object"
            }
        }
    }
}